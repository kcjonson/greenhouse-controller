{
  "name": "greenhouse-controller-api",
  "author": "Kevin Jonson <kcjonson@gmail.com>",
  "description": "Greenhouse Controller API Server",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel src --out-dir build -s --ignore *.spec.*,__mocks__",
    "build": "npm run clean && npm run build-server",
    "prestart": "npm run build && npm run migrate && npm run seed",
    "start": "node --enable-source-maps ./build/index.js",
    "lint": "eslint src",
    "test": "npm run migrate && jest --forceExit",
    "watch-tests": "esw src & jest --watchAll",
    "dev": "nodemon --watch ./src --ignore ./src/**/*.spec.js -x \"npm start\"",
    "coverage": "jest --coverage",
    "seed": "knex seed:run",
    "migrate": "knex migrate:latest"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-simple-errors": "^1.0.0",
    "isvalid": "^2.7.16",
    "knex": "0.95.4",
    "node-fetch": "^2.6.1",
    "pg": "^8.5.1",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "babel-jest": "^26.6.3",
    "eslint": "^7.16.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "supertest": "^6.0.1"
  }
}
