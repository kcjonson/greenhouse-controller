{
  "name": "greenhouse-controller-api",
  "author": "Kevin Jonson <kcjonson@gmail.com>",
  "description": "Greenhouse Controller API Server",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel src --out-dir build -s --ignore *.spec.*,__mocks__",
    "build": "npm run clean && npm run build-server",
    "prestart": "npm run build && npm run migrate && npm run seed",
    "start": "node ./build/index.js",
    "lint": "eslint src",
    "test": "jest",
    "watch-tests": "esw src & jest --watchAll",
    "dev": "nodemon --watch ./src --ignore ./src/**/*.spec.js -x \"npm start\"",
    "coverage": "jest --coverage",
    "seed": "knex seed:run",
    "migrate": "knex migrate:latest"
  },
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.1",
    "connect-redis": "^3.3.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "express": "^4.15.2",
    "express-session": "^1.15.6",
    "express-simple-errors": "^1.0.0",
    "isvalid": "^1.6.6",
    "knex": "^0.15.0",
    "pg": "^6.1.3",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "babel-jest": "^23.2.0",
    "eslint": "^3.17.1",
    "eslint-watch": "^3.0.1",
    "jest": "^23.3.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  }
}
